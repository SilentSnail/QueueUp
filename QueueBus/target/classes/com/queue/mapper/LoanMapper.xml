<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.queue.mapper.LoanMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.queue.entity.Loan">
        <id column="id" property="id" />
        <result column="code" property="code" />
        <result column="loan_type" property="loanType" />
        <result column="user_id" property="userId" />
        <result column="amount" property="amount" />
        <result column="load_time" property="loadTime" />
        <result column="repayment_time" property="repaymentTime" />
        <result column="actual_time" property="actualTime" />
        <result column="status" property="status" />
        <result column="remark" property="remark" />
        <result column="is_iou" property="isIou" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, code, loan_type, user_id, amount, load_time, repayment_time, actual_time, status, remark, is_iou
    </sql>

    <select id="searchByParam" parameterType="com.queue.entity.vo.LoanSearchVo" resultType="com.queue.entity.dto.LoanDto">
        select d.id, d.name, d.sex, d.phone, d.address, l.loan_type, sum(l.amount) as amount
        from loan l
        left join directories d on d.id = l.user_id
        where d.del_status = false
        and d.status = 1
        and l.status = 1
        <if test="name != null and name != ''">
            AND d.name like '%'||#{name}||'%'
        </if>
        <if test="type != null">
            AND l.loan_type = #{type}
        </if>
        <if test="status != null">
            AND l.status = #{status}
        </if>
        <if test="startTime != null">
            AND l.load_time &gt; #{startTime}
        </if>
        <if test="endTime != null">
            AND l.load_time &lt; #{endTime}
        </if>
        group by d.id, d.name, d.sex, d.phone, d.address, l.loan_type;
    </select>

</mapper>
